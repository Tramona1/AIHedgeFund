{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/db" },
    { "path": "./packages/logger" },
    { "path": "./packages/id" }
  ]
} 