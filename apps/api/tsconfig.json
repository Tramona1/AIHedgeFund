{
  "extends": "../../tsconfig.json",
  "include": ["**/*.ts", "../types/**/*.d.ts", "../../types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types", "../../types", "../types"]
  }
} 