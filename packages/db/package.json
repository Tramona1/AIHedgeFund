{
  "name": "@repo/db",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "rm -rf dist && npm run build:ts && mkdir -p dist/schema && cp package.json dist/ && cp src/schema/*.ts dist/schema/ && cp src/types.ts dist/ && npx tsc src/index.ts --outDir dist --module CommonJS --esModuleInterop",
    "build:tsup": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "clean": "rimraf .turbo node_modules dist",
    "test": "vitest run",
    "generate": "drizzle-kit generate:pg",
    "migrate": "bun src/migrate.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "drizzle-kit": "^0.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "pg": "^8.11.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.0",
    "postgres": "^3.4.5",
    "zod": "^3.22.4"
  }
}